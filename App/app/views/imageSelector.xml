<Alloy>
	<Window id="imageSelector" class="container">
		<View id="imageArea">
			<View id="overlayRegion"/>
			<ImageView id="image"/>
		</View>
		<View id="textInteracts">
			<View id="nameArea" class='interactRow'>
				<!--<Label id="nameLabel"></Label>-->
				<TextField id="name"/>
			</View>
			<View id="doneArea" class='interactRow'>
				<Label id="cancel" onClick="cancel"/>
				<Label id="done" onClick="done"/>
			</View>
		</View>
	</Window>
</Alloy>